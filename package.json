{
  "name": "ew-user-registry-lib",
  "version": "1.0.3-alpha.11",
  "description": "",
  "main": "dist/js/src/index.js",
  "types": "dist/js/src/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf build schemas db.json dist",
    "compile": "truffle compile",
    "deploy-contracts": "truffle migrate",
    "prebuild": "rm -rf dist/js",
    "build": "npm run build-schemas && rm -rf dist/js && tsc",
    "test": "npm run build && mocha dist/js/src/test/ --timeout 60000",
    "start-ganache": "ganache-cli -m 'chalk park staff buzz chair purchase wise oak receive avoid avoid home' -l 8000000 -e 1000000 -a 20",
    "start-test-backend": "node node_modules/ew-utils-testbackend/dist/js/src/index.js",
    "build-and-deploy": "npm run build && npm run deploy-contracts",
    "prettier": "prettier --write --config-precedence file-override './src/**/*'",
    "lint": "solium -d contracts && tslint 'src/**/*{.ts,.tsx}'",
    "lint-fix": "solium -d contracts --fix && tslint --fix 'src/**/*{.ts,.tsx}'",
    "prepare": "node scripts/build.js",
    "prebuild-schemas": "rm -rf dist/schemas && mkdir -p dist/schemas && rm -rf schemas && mkdir schemas",
    "build-schemas": "npm run prebuild-schemas && npm run build-schema:UserPropertiesOffChain && cp -R schemas dist/schemas",
    "build-schema:UserPropertiesOffChain": "typescript-json-schema --ignoreErrors --required src/blockchain-facade/Users/User.ts IUserOffChainProperties > schemas/UserOffChainProperties.schema.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/ew-user-registry-lib.git"
  },
  "author": "slock.it GmbH; Martin Kuechler, martin.kuechler@slock.it; Heiko Burkhardt, heiko.burkhardt@slock.it",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://git.slock.it/ewf/origin/user-registry/ew-user-registry-lib"
  },
  "homepage": "https://github.com/energywebfoundation/ew-user-registry-lib#readme",
  "dependencies": {
    "ew-utils-deployment": "0.3.0",
    "ew-utils-general-lib": "1.0.2-alpha.4",
    "typedarray-to-buffer": "3.1.5",
    "web3": "1.0.0-beta.37",
    "winston": "3.2.1",
    "yaeti": "1.0.2"
  },
  "devDependencies": {
    "@types/chai": "4.1.4",
    "@types/mocha": "2.2.48",
    "@types/node": "9.6.28",
    "@types/web3": "1.0.14",
    "chai": "4.1.2",
    "ethlint": "1.2.4",
    "ew-utils-testbackend": "energywebfoundation/ew-utils-testbackend#582dbeb84596a984aa5cf2eb763d82182263aac0",
    "fs-extra": "8.0.1",
    "ganache-cli": "6.1.8",
    "lint-staged": "8.1.7",
    "mocha": "5.2.0",
    "prettier": "1.17.1",
    "truffle": "5.0.18",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-lines-between-class-members": "1.3.1",
    "tslint-sonarts": "1.9.0",
    "typescript": "2.9.2",
    "typescript-json-schema": "0.31.0"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts",
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write --config ./.prettierrc --config-precedence file-override",
      "git add"
    ]
  },
  "files": [
    "contracts",
    "dist"
  ]
}
